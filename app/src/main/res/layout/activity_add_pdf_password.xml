<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_app_color"
        tools:context=".ui.activities.AddPdfPasswordActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/widgetsColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white">

            <ImageView
                android:id="@+id/backArrowImg"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="-5dp"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/fileNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxEms="20"
                android:paddingStart="@dimen/_10sdp"
                android:text="Add PDF Password"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/shareImg"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:visibility="gone"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_4sdp"
                android:src="@drawable/baseline_share_24"
                app:tint="@color/white" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Select Pdf File to add password."
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintBottom_toTopOf="@+id/selectPdfFile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectPdfFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add PDf"
            android:backgroundTint="@color/widgetsColor"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBAR" />

        <ProgressBar
            android:id="@+id/pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="#2461EC"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBAR" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>