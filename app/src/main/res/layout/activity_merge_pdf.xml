<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_app_color"
        tools:context=".ui.activities.MergePdfActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/widgetsColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/white">

            <ImageView
                android:id="@+id/backArrowImg"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="-5dp"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/searchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_8sdp"
                android:text="Merge PDF"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_18sdp" />

            <ImageView
                android:id="@+id/searchImg"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/baseline_share_24"
                app:tint="@color/white" />
        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectPdfFilesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select PDF Files."
            android:textColor="@color/white"
            android:backgroundTint="@color/widgetsColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBAR" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select PDF Files For Merging."
            android:textColor="@color/white"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toTopOf="@+id/selectPdfFilesBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>